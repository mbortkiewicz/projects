		return null;
	}
	
	public TWypozyczenie szukaj_TWypozyczenie(TProdukt produkt, TKlient klient)
	{
		return null;
	}
	
	public boolean przyjmij_towar(TProdukt[] produkty, TWypozyczenie wypozyczenie)
	{
		return false;
	}
	
